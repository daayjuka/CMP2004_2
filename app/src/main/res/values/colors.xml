    <color name="dark_onSurface">#EAE0E2</color>
    <color name="dark_surfaceVariant">#4D4448</color>
    <color name="dark_onSurfaceVariant">#D1C2C7</color>
    <color name="dark_outline">#9A8D92</color>
    <color name="dark_inverseOnSurface">#1F1A1C</color>
    <color name="dark_inverseSurface">#EAE0E2</color>
    <color name="dark_inversePrimary">#9C27B0</color>
    <color name="dark_shadow">#000000</color>
    <color name="dark_surfaceTint">#B977CC</color> <!-- Usually same as dark_primary -->
    <color name="dark_outlineVariant">#4D4448</color>
    <color name="dark_scrim">#000000</color>

    <!-- Dark Theme Custom Button (Example) -->
    <color name="my_dark_button_background">@color/dark_primaryContainer</color>
    <color name="my_dark_button_text">@color/dark_onPrimaryContainer</color>
    <color name="my_dark_text_color_primary">#E0E0E0</color> <!-- Lighter text for general content on dark_surface -->
    <color name="my_dark_text_color_secondary">#BDBDBD</color>

